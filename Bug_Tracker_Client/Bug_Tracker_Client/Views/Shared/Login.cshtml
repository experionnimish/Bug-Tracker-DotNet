
@using BugTrackerDTOs

@model BugTrackerDTOs.UserDto

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/validator.js"></script>
<div class="container">
    <div class="row vertical-center">
        <div class="col-md-6 col-md-offset-3 login_panel">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="text-center"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp&nbspBug Tracker</h2>
                    <div class="panel-body">
                        @*<% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                        <% } %>*@
                        @if (ViewBag.LoginError != null)
                        {
                            <div class="alert alert-danger">@ViewBag.LoginError</div>
                        }
                        <form class="form-horizontal" role="form" data-toggle="validator" method="post" action="/Home/Authenticate">
                            <div class="form-group">
                                <label for="username" class="col-sm-3 control-label">
                                    Username
                                </label>
                                <div class="col-sm-9">
                                    @*<input type="text" class="form-control" id="username" name="username" placeholder="Username" pattern="^[0-9]{3}$" maxlength="3" required>*@
                                    @Html.TextBoxFor(m => m.user_employee_id, new { @id = "username", @class = "form-control", @placeholder = "Username", @pattern = "^[0-9]{3}$", @maxlength = "3", @required = "required" })
                                    <!-- <div class="help-block">Number of length 3</div> -->
                                    <div class="help-block with-errors">Number of length 3</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">
                                    Password
                                </label>
                                <div class="col-sm-9">
                                    @*<input type="password" class="form-control" id="password" placeholder="Password" name="password" required data-minlength="6" maxlength="50">*@
                                    @Html.PasswordFor(m => m.user_password, new { @class = "form-control", placeholder = "Password", @id = "password", @name = "password", @required = "required", @minlength = "6", @maxlength = "50" })
                                    <div class="help-block with-errors">Minimum length 6</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="remember" />
                                            Remember me
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group last">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Sign in
                                    </button>
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="forgot_password text-center">
                            <a href="/forgotPassword">Forgot password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
